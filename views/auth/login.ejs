<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Welcome to lucky draw</title>
    <link rel="stylesheet" href="styles/login.css" />
  </head>
  <body>
    <div class="box">
      <form onsubmit="return login(event)" class="login-form">
        <h1>Login</h1>
        <input type="email" name="email" placeholder="Email" required />
        <input
          type="password"
          name="password"
          placeholder="Password"
          required
        />
        <button id="login_btn" class="" type="submit">Login</button>
        <div class="links">
          <a href="#">Forgot Password</a>
        </div>
        <div id="spiner" class="lds-spinner hidden">
          <div></div>
          <div></div>
          <div></div>
          <div></div>
          <div></div>
          <div></div>
          <div></div>
          <div></div>
          <div></div>
          <div></div>
          <div></div>
          <div></div>
        </div>
      </form>
    </div>
    <script>
      const spinner = document.getElementById("spiner");
      const loginBtn = document.getElementById("login_btn");

      const login = (e) => {
        e.preventDefault();
        const email = e.target[0].value;
        const password = e.target[1].value;
        // spinner.classList.remove("hidden");
        // loginBtn.classList.add("unselectable");
        fetch("/auth", {
          method: "POST",
          body: JSON.stringify({ email: email, password: password }),
          credentials: "include",
          headers: {
            "Content-Type": "application/json",
          },
        })
          .then((res) => {})
          .catch((err) => {});
      };
    </script>
  </body>
</html>
